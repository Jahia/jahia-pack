        </dependency>
        <dependency>
            <groupId>org.jahia.modules</groupId>
            <artifactId>bootstrap3-components</artifactId>
            <version>3.7.0</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.jahia.modules</groupId>
            <artifactId>bootstrap3-core</artifactId>
            <version>3.7.0</version>
            <scope>runtime</scope>
        </dependency>
        <!-- end of Jahia Forge Modules -->

        <!-- Users and groups provider modules -->
        <dependency>
            <groupId>org.jahia.modules</groupId>
            <artifactId>ldap</artifactId>
            <version>3.2.1</version>
            <scope>runtime</scope>
        </dependency>

        <!-- Templates sets -->
        <dependency>
            <groupId>org.jahia.modules</groupId>
            <artifactId>dx-base-demo-templates</artifactId>
            <version>2.1.0</version>
            <scope>runtime</scope>
        </dependency>

        <!-- Document management modules -->
        <dependency>
            <groupId>org.jahia.modules</groupId>
            <artifactId>document-management-api</artifactId>
            <version>2.0.10</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.jahia.modules</groupId>
            <artifactId>document-viewer-service</artifactId>
            <version>2.0.10</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>org.jahia.modules</groupId>
            <artifactId>document-thumbnails</artifactId>
            <version>2.0.10</version>
            <scope>runtime</scope>
        </dependency>

        <!-- Pre-packaged demo sites -->
        <dependency>
            <groupId>org.jahia.modules</groupId>
            <artifactId>digitall</artifactId>
            <version>1.1.0</version>
            <type>jar</type>
            <scope>runtime</scope>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>modules</id>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/modules</outputDirectory>
                            <excludeGroupIds>org.jahia.prepackagedsites</excludeGroupIds>
                            <excludeTransitive>true</excludeTransitive>
                        </configuration>
                    </execution>
                    <execution>
                        <id>demos</id>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/prepackagedSites</outputDirectory>
                            <includeGroupIds>org.jahia.prepackagedsites</includeGroupIds>
                            <stripVersion>true</stripVersion>
                            <excludeTransitive>true</excludeTransitive>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <descriptor>src/main/assembly/src.xml</descriptor>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
